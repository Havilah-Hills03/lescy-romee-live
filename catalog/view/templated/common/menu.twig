{% if categories %}
  <div class="" style="background: white; display: flex; justify-content: center">
    <nav id="menu" class="navbar navbar-expand-lg fixed" style="background: transparent; border: none;">
      <div id="category" class="d-block d-sm-block d-lg-none" style="margin-right: auto; color: #333">{{ text_category }}</div>
       <div class="logo-section">
       <img src="{{ base }}image/catalog/romeo-logo.png"  alt="Lescy Romeo logo - Mattoris" class="d-block d-sm-block d-lg-none">
      <button type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu" class="navbar-toggler d-lg-none" style="color: #333; border:2px solid #333; margin-left: 4rem" ><i class="fa-solid fa-bars" style="color: #333" ></i></button>
      </div>
      <div id="navbar-menu" class="collapse navbar-collapse" style="  text-align: center" >
        <ul class="nav navbar-nav">
        <li  class="nav-item-link"> <a href="" class="nav-link ">Home</a></li> 
          {% for category in categories %}
            {% if category.children %}
              {% set total = category.children|length %}
              {% if total > 20 %}
                {% set batch = (total / 4)|round(0, 'ceil') %}
                {% set column = 4 %}
              {% else %}
                {% set batch = 5 %}
                {% set column = (total / 5)|round(0, 'ceil') %}
              {% endif %}
              <li class="nav-item dropdown"> 
              <a href="{{ category.href }}" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">{{ category.name }}</a>
                <div class="dropdown-menu dropdown-column-{{ column }}">
                  <div class="dropdown-inner">
                    {% for children in category.children|batch(batch) %}
                      <ul class="list-unstyled">
                        {% for child in children %}
                          <li><a href="{{ child.href }}" class="dropdown-item">{{ child.name }}</a></li>
                        {% endfor %}
                      </ul>
                    {% endfor %}
                  </div>
                  <ul class="list-unstyled">
                    <li>
                      <hr class="dropdown-divider">
                    </li>
                    <li><a href="{{ category.href }}" class="dropdown-item">{{ text_all }} {{ category.name }}</a></li>
                  </ul>
                </div>
              </li>
             
            {% else %}
              <li class="nav-item"><a href="{{ category.href }}" class="dropdown-item" style=" color:#212529; font-size: 1rem ">{{ category.name }}</a></li>
            {% endif %}
          {% endfor %}
            <li  class="nav-item-link"> <a href="index.php?route=information/information&information_id=1" class="nav-link">About Us</a></li>
              <li  class="nav-item-link"> <a href="index.php?route=information/location" class="nav-link">Find Us</a></li>
        </ul>
      </div>
    </nav>
  </div>
{% endif %}
